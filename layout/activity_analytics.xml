<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/analyticsBgColor"
    tools:context=".AnalyticsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/analytics"
        android:textSize="40sp"
        android:textColor="@color/titleTextColor"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:textSize="25sp"
        android:text="Our Analysis is as follows:

- In this part, many suggestions based on the actions of the user will be made"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/tvAnalytics"
        />

</LinearLayout>